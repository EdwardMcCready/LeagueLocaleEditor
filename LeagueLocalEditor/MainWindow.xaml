<Window x:Class="LeagueLocalEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeagueLocalEditor" 
        xmlns:viewmodels="clr-namespace:LeagueLocalEditor.ViewModels"
        xmlns:converters="clr-namespace:LeagueLocalEditor.Converters"
        xmlns:enums="clr-namespace:LeagueLocalEditor.Enums"
        mc:Ignorable="d"
        Title="Locale Editor" Height="450" Width="800">
    <Window.Resources>
        <converters:CodeToLanguageConverter x:Key="CodeToLanguageConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Content="{Binding LocaleCode, Converter={StaticResource ResourceKey=CodeToLanguageConverter}}" />
        <ComboBox Grid.Column="1" ItemsSource="{Binding Languages}" DisplayMemberPath="Item1"/>
        <!--<Button Command="{Binding RunLeagueCommand}"/>-->
    </Grid>
</Window>
